<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Landmark Image -->
        <ImageView
            android:id="@+id/landmarkImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Landmark image" />

        <!-- Landmark Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/landmarkTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Landmark Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Coordinates -->
            <TextView
                android:id="@+id/landmarkCoordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Lat: 0.0, Lon: 0.0"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Optional: ID (for debugging) -->
            <TextView
                android:id="@+id/landmarkId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="ID: 0"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>